{
  "name": "captura-unificada",
  "productName": "Captura Unificada",
  "version": "1.0.8",
  "description": "Launcher de sistemas integrados",
  "main": "main.js",
  "author": "Jeferson Oliveira",
  "copyright": "Â©Jeferson Oliveira - 2026",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-updater": "^6.8.3"
  },
  "build": {
    "appId": "com.consorcio.capturaunificada",
    "productName": "Captura Unificada",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "iJeferson",
        "repo": "captura-unificada"
      }
    ],
    "files": [
      "**/*",
      "!dist/*",
      "!.vscode/*",
      "!node_modules/*{test,tests,example,examples,*.md,*.html,*.js.map,*.ts}*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.png",
      "artifactName": "Captura-Unificada-Setup.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Captura Unificada",
      "runAfterFinish": true,
      "uninstallDisplayName": "Captura Unificada",
      "deleteAppDataOnUninstall": false,
      "differentialPackage": true
    }
  }
}
